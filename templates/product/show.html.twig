{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ product.nombre }}</td>
            </tr>
            <tr>
                <th>Inventario</th>
                <td>{{ product.inventario }}</td>
            </tr>
            <tr>
                <th>Precio</th>
                <td>{{ product.precio }}</td>
            </tr>
            <tr>
                <th>Cantidad</th>
                <td>{{ product.cantidad }}</td>
            </tr>
            <tr>
                <th>Imagen</th>
                <td>{{ product.imagen }}</td>
